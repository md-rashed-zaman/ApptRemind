{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["apps/**/*", "packages/**/*", "tools/**/*"],
  "exclude": ["**/node_modules/**", "**/.next/**", "**/dist/**"]
}
