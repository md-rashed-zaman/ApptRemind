{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "auth.user.created.v1",
  "title": "auth.user.created.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "user_id",
    "business_id",
    "email",
    "role",
    "created_at"
  ],
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Auth user identifier (UUID)."
    },
    "business_id": {
      "type": "string",
      "description": "Tenant/business identifier (UUID)."
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "role": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
